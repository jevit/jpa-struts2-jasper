<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
    <constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	 <package name="default" namespace="/" extends="jasperreports-default">
		<action name="reportAction" class="reportAction">
			<result name="success" type="jasper">
  				<param name="location">/WEB-INF/classes/reports/test.jasper</param>
           		<param name="format">PDF</param>
  				<param name="dataSource">listUtilisateurVO</param>
			</result>
			<result name="error">commun/error.jsp</result>
		</action> 
	</package> 
	
 	<package name="utilisateur" namespace="/utilisateur" extends="struts-default">
	 	<action name="login">
			<result>utilisateur.jsp</result>
	    </action>
		<action name="loginAction" class="utilisateurAction">
			<result name="SUCCESS">./index.jsp</result>
			<result name="error">../commun/error.jsp</result>
			<result name="input">utilisateur.jsp</result>
		</action>
	</package> 
	   <constant name="struts.custom.i18n.resources" value="global" />
 
  <package name="user" namespace="/login" extends="struts-default">
     <action name="login">
		 <result>login.jsp</result>
     </action>
     <action name="validateUser" class="loginAction">
		 <result name="SUCCESS">welcome.jsp</result>
	 	<result name="input">login.jsp</result>
     </action>
   </package>
</struts>